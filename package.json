{
  "name": "excalidraw",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "pnpm -r exec rm -rf dist .next .turbo node_modules/.cache",
    "clean:db": "rm -rf packages/db/dist",
    "clean:web": "rm -rf apps/web/.next",
    "clean:backend": "rm -rf packages/backend/dist",
    "build:clean": "pnpm clean && pnpm build",
    "dev:clean": "pnpm clean && pnpm dev",
    "reset": "pnpm store prune && pnpm clean && pnpm install && pnpm build"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=18"
  }
}
